@model App.Web.Areas.Dashboard.ViewModels.CategoryActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @if (Model.ID > 0)
                {
                    <span> Edit Category</span>
                }
                else
                {
                    <span>Create Category</span>
                }

            </h5>


            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="accomodationTypeCreate">
                <input type="hidden" name="ID" value="@Model.ID" />
                <div class="form-group">
                    <label class="col-form-label">Name<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter Category Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label class="col-form-label">Description<span class="text-danger">*</span></label>
                    <textarea class="form-control" name="Description" placeholder="Enter Category Description">@Model.Description</textarea>
                </div>
            </form>
            <div class="errorDiv">

            </div>
        </div>
        <div class="modal-footer">
            @if (Model.ID > 0)
            {
                <button type="button" class="btn btn-primary" id="saveBtn"><i class="fas fa-save mr-1"></i>Update</button>

            }
            else
            {
                <button type="button" class="btn btn-primary" id="saveBtn"><i class="fas fa-save mr-1"></i>Save</button>

            }
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>

        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>

    $("#saveBtn").click(function () {

        $.ajax({
            url : '@Url.Action("Action", "Categories")',
            type: 'POST',
            data: $("#accomodationTypeCreate").serialize()
        })
			.done(function (response) {
			    if(response)
			    {
			        location.reload();
			        //$('#accomodatioTypeForm').modal('toggle');
			        //$("#listingArea").html(response);
			    }
			    else
			    {
			        $(".errorDiv").html(response.Message)
			    }

			});
    });

</script>
